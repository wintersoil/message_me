<h2 align="center">Welcome to MessageMe- <em>a complete Chat App</em></h2>
<h3 class="ui header center aligned icon">
  <i class="power off icon orange circular"></i>
  <div class="content">
    Log in to continue
  </div>
</h3>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_with(scope: :session, html: {class: "ui form", role: "form"}, url: login_path, method: "post", local: true) do |f| %>
      <div class="ui form">
        <div class="field">
          <%= f.label(:username, "Username:") %>
          <div class="ui left icon input">
            <%= f.text_field(:username) %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label(:password, "Password:") %>
          <div class="ui left icon input">
            <%= f.password_field(:password) %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit("Login", class:"ui orange submit button") %>
      </div>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big button orange disabled">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
